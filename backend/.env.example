# FastAPI Settings
API_PORT=8000
DEBUG=true
SECRET_KEY=your_super_secret_key_for_jwt_tokens_change_me
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/db_name

# Redis for Celery
REDIS_URL=redis://localhost:6379/0

# RingCentral API
RINGCENTRAL_CLIENT_ID=your_ringcentral_client_id
RINGCENTRAL_CLIENT_SECRET=your_ringcentral_client_secret
RINGCENTRAL_JWT_TOKEN=your_ringcentral_jwt_token
RINGCENTRAL_ACCOUNT_ID=~

# Zoho CRM API
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_zoho_refresh_token

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO 